{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDirs": [
            "src"
        ],
        "baseUrl": "src",
        "incremental": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
}