{
  "name": "nu-challenge",
  "version": "1.0.0",
  "description": "solution to nubank code challenge",
  "main": "./dist/bin/index.ts",
  "type": "module",
  "scripts": {
    "start": "npx tsx ./bin/index.ts",
    "tests": "jest --coverage"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "node-process": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@types/node": "^20.11.6",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ]
  }
}